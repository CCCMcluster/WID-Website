{% set classes = [
  'block',
  'block-' ~ configuration.provider|clean_class,
  'block-' ~ plugin_id|clean_class
] %}
{% set contentClasses = [
  'content'
] %}
<div class="container">
  <h1>About</h1>
  <div {{ attributes.addClass(classes) }}>
    <div class="row">
      {{ title_prefix }}
      {% if label %}
        <h2{{ title_attributes }}>{{ label }}</h2>
      {% endif %}
      {{ title_suffix }}
      {% block content %}
        {{ content.body }}
        <div class="about-us-background-image">
          {% if content.field_about_us_background_image %}
            <img src="{{ file_url(content.field_about_us_background_image.0['#item'].entity.uri.value) }}"
                 alt="{{ content.field_about_us_background_image.0['#item'].alt }}">
          {% endif %}
        </div>
      {% endblock %}
    </div>
  </div>
</div>
