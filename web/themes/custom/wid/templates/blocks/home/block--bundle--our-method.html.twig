{%
  set classes = [
  'block',
  'block-' ~ configuration.provider|clean_class,
  'block-' ~ plugin_id|clean_class
]
%}
{%
  set contentClasses = [
  'content'
]
%}
<section class="method-wrapper">
  <div class="container">
    <div {{ attributes.addClass(classes) }}>
      <div class="">
        {% set alt_text = content.field_our_method_media[0]['#media'].thumbnail[0].alt %}
        {% set image_url = media_file_url(content.field_our_method_media[0]['#media'].mid[0].value) %}
        <div class="method-container">
          <div class="method-img-block">
            <div class="method-img">
              <img src="{{image_url}}" alt="{{alt_text}}" class="img-fluid w-100 h-100" />
            </div>
          </div>
          <div class="method-block">
            <div class="method">
              {{ title_prefix }}
              {% if label %}
                <h2{{ title_attributes }}>{{ label }}</h2>
              {% endif %}
              {{ title_suffix }}
              {% block content %}
                <div{{ content_attributes.addClass(contentClasses) }}>
                  <div>{{content.body}}</div>
                </div>
              {% endblock %}
              <a href="/toolkit" class="read-more-btn">Read more</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
