{#
/**
 * @file
 * Theme override to display a view of unformatted rows.
 *
 * Available variables:
 * - title: The title of this group of rows. May be empty.
 * - rows: A list of the view's row items.
 *   - attributes: The row's HTML attributes.
 *   - content: The row's content.
 * - view: The view object.
 * - default_row_class: A flag indicating whether default classes should be
 *   used on rows.
 *
 * @see template_preprocess_views_view_unformatted()
 */
#}
  {% set our_country_report_block_id = 12 %}
  {% set active_countries = drupal_field('field_active_countries', 'block_content', our_country_report_block_id) %}

{% for key, row in rows %}
  {% set row_classes = [
    default_row_class ? 'views-row',
  ] %}
  {% set bg_img = file_url(
    get_file_field_uri(
    row.content['#row']._entity,
    'field_overview_report_bg_img'
    )
    ) %}
  <div class="our-single-report-header" {{ row.attributes.addClass(row_classes) }} style="background-image: url('{{ bg_img }}')">
    {% if active_countries %}
      <div class="our-single-report-header-nav row">
        {% for index in active_countries['#items']|keys %}
          <div class="our-single-report-header-nav-item">
            <a
              href="{{ path('view.country_report.page_1', {'country':  active_countries['#items'][index].value|lower }) }}">
              {{ active_countries[index] }}
            </a>
          </div>
        {% endfor %}
      </div>
    {% endif %}
    <div class="col-sm-12 col-md-11 col-lg-10">
      <div class="our-single-report-header-card">
        <div class="row m-0 p-0">
          <div class="country-report-cover-image col-sm-12 col-md-2 col-lg-3 p-0 m-0 image-fluid w-100">
            {{ view.style_plugin.getField(key, 'field_report_overview_cover') }}
          </div>
          <div class="country-report-description col-sm-12 col-md-10 col-lg-9 py-2 px-3">
            <div class="country-report-description-title">{{ view.style_plugin.getField(key, 'field_report_overview_country') }}</div>
            <div class="country-report-description-body"{{ view.style_plugin.getField(key, 'description__value') }}</div>
            <span class="country-report-description-button">Reports &nbsp <i class="fa fa-angle-down" aria-hidden="true"></i></span>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endfor %}
