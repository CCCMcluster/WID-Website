{#
/**
 * @file
 * Theme override to display a view of unformatted rows.
 *
 * Available variables:
 * - title: The title of this group of rows. May be empty.
 * - rows: A list of the view's row items.
 *   - attributes: The row's HTML attributes.
 *   - content: The row's content.
 * - view: The view object.
 * - default_row_class: A flag indicating whether default classes should be
 *   used on rows.
 *
 * @see template_preprocess_views_view_unformatted()
 */
#}
{% set active_countries = load_vocabulary_term('country_report_overview') %}

{% for key, row in rows %}
  {% set row_classes = [
    default_row_class ? 'views-row',
  ] %}
  {% set bg_img = file_url(
    get_file_field_uri(
    row.content['#row']._entity,
    'field_overview_report_bg_img'
    )
    ) %}
  {% set country_report_iso = row.content['#row']._entity.field_report_overview_country.value %}
  {% set country_title = '' %}
  <div class="our-single-report-header" {{ row.attributes.addClass(row_classes) }} style="background-image: url('{{ bg_img }}')">
    {% if active_countries %}
      <div class="our-single-report-header-nav row">
        {% for country in active_countries %}
          {% set country_iso_code = load_tax_term(country.id).field_report_overview_country.value %}
          {% if country_iso_code ==  country_report_iso %}
            {% set country_title = country.name %}
          {% endif %}
          <div class="our-single-report-header-nav-item">
            <a
              href="{{ path('view.country_report.page_1', {'country':  country_iso_code|lower }) }}">
              {{ country.name }}
            </a>
          </div>
        {% endfor %}
      </div>
    {% endif %}
    <div class="col-sm-12 col-md-11 col-lg-10">
      <div class="our-single-report-header-card">
        <div class="row m-0 p-0">
          <div class="country-report-cover-image col-sm-12 col-md-3 col-lg-5 p-0 m-0 image-fluid w-100">
            {{ view.style_plugin.getField(key, 'field_report_overview_cover') }}
          </div>
          <div class="country-report-description col-sm-12 col-md-9 col-lg-7 py-3 px-3">
            <div class="country-report-description-title" data-id="{{ country_title }}">
              {{ country_title }}
            </div>
            <div class="country-report-description-body">
              {{ view.style_plugin.getField(key, 'description__value') }}
            </div>
            <span class="country-report-description-button">Reports &nbsp <i class="fa fa-angle-down" aria-hidden="true"></i></span>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endfor %}
<script>
    let page_title = document.querySelector('.country-report-description-title').dataset.id;
    document.title = page_title + ' | Women in Displacement';
</script>
